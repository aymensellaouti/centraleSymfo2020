{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
        {% for message in app.session.flashBag.get('info') %}
            <div class="alert alert-info">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.session.flashBag.get('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.session.flashBag.get('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        <h1>Liste des todos :</h1>
        <ol class="list-group">
        {% for titre, contenu in app.session.get('mesTodos')%}
            <li class="list-group-item">
                {{ titre }} : {{ contenu }}
                <a href="{{ path('todo.delete', {name: titre}) }}">Supprimer</a>
                <a href="{{ url('todo.delete', {name: titre}) }}">Supprimer</a>
            </li>
            </li>
        {% endfor %}
        </ol>
    </div>
{% endblock %}

{% block pageTitle %}
    Todo Liste
{% endblock %}
{% block fileAriane %}
    Todo
{% endblock %}
{% block title %}
    Gestionnaire de Todo
{% endblock %}